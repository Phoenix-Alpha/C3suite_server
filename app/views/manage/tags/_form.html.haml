= form_for [:manage, @tag], html: { class: 'form-horizontal' } do |f|
  .card.card-default
    .card-header
    .card-body
      - if tag.errors.any?
        #error_explanation
          .h2
            = pluralize(tag.errors.count, "error") << "prohibited this user from being saved:"

          %ul
            = tag.errors.full_messages.each do |message|
              %li
                = message

      .form_group
        = f.label :name, class: 'control-label'
        = f.text_field :name, class: 'form-control', required: true

    .card-footer
      = link_to 'Back', manage_tags_path, class: 'btn btn-sm btn-secondary'
      = f.submit class: 'btn btn-sm btn-primary'