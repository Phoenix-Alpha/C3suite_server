#media.row{ 'data-type': "#{@media.local_type}", 'data-viewed': "#{@viewed}"  }
  .col-md-8.offset-md-2.col-lg-8.offset-lg-2
    .h2
      = @media.title
      %small.text-muted
        = @media.caption
    
    - if @media.present?
      - if @media.local_type == 'Video'
        = video_tag @media.source_url, controls: true, size: '300x200', class: 'video-tag'
      - elsif @media.local_type == 'Audio'
        = audio_tag @media.source_url, controls: true, class: 'audio-tag'
      - else
        = image_tag @media.source_url, class: 'img-thumbnail'
      
      -if @has_bookmarks
        = link_to "<span class='fa far #{'fas' if @bookmarks.include?(@media.id)} fa-heart'></span>".html_safe, '#', class: "btn-bkmark-media bookmark #{'bookmarked' if @bookmarks.include?(@media.id)} float-right", 'data-media-id': "#{@media.id}"