#html-templates.col-lg-8.offset-lg-2.col-md-8.offset-md-2.col-sm-12.col-xs-12
  %h2
    = @html.title

  .card.card-default
    -if @is_subscribed_product
      .card-header
        = link_to "<span class='fa far #{'fas' if (@bookmarks.include?(@html.id) and @is_subscribed_product)} fa-heart'></span>".html_safe, '#', class: "btn-bkmark-html bookmark #{'bookmarked' if @bookmarks.include?(@html.id)} float-right", 'data-html-id': "#{@html.id}" if @modulee.present? && @modulee.configurations[:has_bookmarks].present?
    .card-body
      = raw(@html.html_source)
    .card-footer
      -if @is_subscribed_product
        .float-right
          %span.mr-4{ class: "#{@viewed ? 'text-success' : 'text-muted' }"}
            -if @viewed
              %em.icon-check
              Marked as Read
            -else	
              ( Click to save progress if you have read this completely )
          = link_to 'Mark as read', '#', class: "btn-viewed-html btn btn-sm btn-primary", 'data-html-id': "#{@html.id}", 'data-html-viewed': "false", 'data-turbolinks': "false" if !@viewed

